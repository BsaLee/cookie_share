{
  "manifest_version": 3,
  "name": "路桥ck同步",
  "version": "1.0",
  "description": "神仙小分队-路桥开发的内部使用cookie同步工具",
  "permissions": [
    "storage",
    "cookies",
    "activeTab",
    "tabs",
    "contextMenus",
    "webRequest",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "incognito": "split",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
